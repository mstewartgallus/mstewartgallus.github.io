---
layout: none
---
[
    {%- for post in site.posts -%}
    {%- assign tags = post.tags | sort -%}
    {%- assign categories = post.categories | sort -%}
    {
        "title": {{ post.title | jsonify }},
        "tags": [
            {%- for tag in tags -%}
            {{ tag | jsonify }}
            {%- unless forloop.last -%},{%- endunless -%}
            {%- endfor -%}
        ],
        "categories": [
            {%- for category in categories -%}
            {{ category | jsonify }}
            {%- unless forloop.last -%},{%- endunless -%}
            {%- endfor -%}
        ]
    }
    {%- unless forloop.last -%},{%- endunless -%}
    {%- endfor -%}
]
