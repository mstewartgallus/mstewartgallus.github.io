---
layout: none
---
[
    {%- for post in site.posts -%}
    {%- assign tags = post.tags | sort -%}
    {%- assign categories = post.categories | sort -%}
    {
        "title": "{{ post.title | json }}",
        "url": "{{ post.url | json }}",
        "tags": [
            {%- for tag in tags -%}
            "{{ tag | json }}"
            {% unless forloop.last %},{% endunless -%}
            {%- endfor -%}
        ],
        "categories": [
            {%- for category in categories -%}
            "{{ category | json }}"
            {% unless forloop.last %},{% endunless -%}
            {%- endfor -%}
        ],
        "date": "{{ post.date | date: "%Y-%m-%d" }}"
    }
    {% unless forloop.last %},{% endunless -%}
    {%- endfor -%}
]
